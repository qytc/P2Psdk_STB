<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/video_trying_bg">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@mipmap/call_comming_pic" />

    <TextView
        android:id="@+id/tv_remote_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_call_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/video_trying_tip_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_call_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="来电号码"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:background="@drawable/focused_selector"
            android:focusable="true"
            android:paddingLeft="1dp"
            android:paddingTop="2dp"
            android:paddingRight="1dp"
            android:paddingBottom="2dp"
            android:scaleType="fitXY"
            android:src="@mipmap/video_trying_accept" />

        <ImageView
            android:id="@+id/iv_hangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/focused_selector"
            android:focusable="true"
            android:paddingLeft="1dp"
            android:paddingTop="2dp"
            android:paddingRight="1dp"
            android:paddingBottom="2dp"
            android:scaleType="fitXY"
            android:src="@mipmap/video_trying_cancel" />
    </LinearLayout>
</RelativeLayout>
